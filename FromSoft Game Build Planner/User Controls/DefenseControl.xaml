<UserControl x:Class="FromSoft_Game_Build_Planner.DefenseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FromSoft_Game_Build_Planner"
             x:Name="DefControl"
             mc:Ignorable="d" 
             Width="390">
    <Grid>
        <StackPanel>
            <TextBlock Text="Defense" FontSize="20" Foreground="White" />
            <Separator />
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Physical" Margin="0,0,19,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.PhysDef}" Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="18,0,0,0" >
                <StackPanel Margin="20,0,0,0" Orientation="Horizontal" >
                    <TextBlock Text="VS Strike" Margin="0,0,16,0"  Foreground="White"/>
                    <Separator Foreground="White" Width="250" />
                    <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.Strike}" Foreground="White"/>
                </StackPanel>
                <StackPanel Margin="20,0,0,0"  Orientation="Horizontal" >
                    <TextBlock Text="VS Slash" Margin="0,0,18,0" Foreground="White"/>
                    <Separator Foreground="White" Width="250"/>
                    <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.Slash}" Foreground="White"/>
                </StackPanel>
                <StackPanel Margin="20,0,0,0"  Orientation="Horizontal" >
                    <TextBlock Text="Vs Thrust" Margin="0,0,14,0" Foreground="White"/>
                    <Separator Foreground="White" Width="250" />
                    <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.Thrust}" Foreground="White"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Magic" Margin="0,0,28,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.MagDef}" Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Fire" Margin="0,0,41,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.FireDef}" Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Lightning" Margin="0,0,10,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=DefenseModel.LightDef}" Foreground="White"/>
            </StackPanel>
            <TextBlock Text="Special Defense" FontSize="20"  Margin="0,25,0,0" Foreground="White"/>
            <Separator />
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Bleed" Margin="0,0,31,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=SpecialDefenseModel.BleedDef}" Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Poison" Margin="0,0,25,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=SpecialDefenseModel.PoisonDef}" Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="25,0,0,0"  Orientation="Horizontal" >
                <TextBlock Text="Curse" Margin="0,0,30,0" Foreground="White"/>
                <Separator Foreground="White" Width="265"/>
                <TextBlock Margin="10,0,0,0" TextAlignment="Center" Width="30" Text="{Binding ElementName=DefControl, Path=SpecialDefenseModel.CurseDef}" Foreground="White"/>
            </StackPanel>
        </StackPanel>
       

    </Grid>
</UserControl>
