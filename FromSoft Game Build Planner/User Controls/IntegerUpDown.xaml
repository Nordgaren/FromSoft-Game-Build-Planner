<UserControl x:Class="FromSoft_Game_Build_Planner.IntegerUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FromSoft_Game_Build_Planner"
             mc:Ignorable="d" Height="24" Width="55">
    <Grid  Height="23" VerticalAlignment="Top">
        <TextBox x:Name="txtNum" x:FieldModifier="private" Text="0" TextChanged="txtNum_TextChanged" HorizontalContentAlignment="Center" Margin="0,2,0,3" LostFocus="txtNum_LostFocus" HorizontalAlignment="Center" Width="48" Background="{Binding Background}" Foreground="White" BorderThickness="0"/>
        <Button x:Name="cmdUp" x:FieldModifier="private" FontSize="10" Padding="0,-4,0,0" Content="▲" Click="cmdUp_Click" Margin="41,2,4,13" TabIndex="-1" Background="Transparent" Foreground="White" BorderThickness="0"/>
        <Button x:Name="cmdDown" x:FieldModifier="private" FontSize="10" Padding="0,-4,0,0" Content="▼" Click="cmdDown_Click" Margin="41,12,4,3" TabIndex="-1" Background="Transparent" Foreground="White" BorderThickness="0"/>
    </Grid>

</UserControl>
